.title{
  margin-left: 30rpx;
  color: #505050;
}
.price{
  color: #ff1414;
  margin-left: 30rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.condition{
  display: flex;
  font-size: 28rpx;
}
.condition view:nth-child(1){
    margin-left: 30rpx;
}
.condition view{
  margin-left: 10rpx;
  margin-top: 20rpx;
  color: #6b6b6b
}

.condition view:nth-child(3){
  margin-left: 40rpx;
}

.condition view:nth-child(5){
  margin-left: 40rpx;
}

.line{
  width: 100%;
  height: 1rpx;
  background-color: #eee;
  margin-top: 30rpx;
   margin-bottom: 30rpx;
}

.detail{
  display: flex;
  font-size: 28rpx;
  width: 90%;
  position: relative;
  left: 5%;
  color: #505050;

}

.detail view{
  background-color: #f0f0f0;
  padding: 8rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 6px;
  margin-right: 20rpx;

}

.line2{
  height: 10rpx;
  background-color: #f7f7f7;
  margin-top: 30rpx;
  margin-bottom: 30rpx
}

.company{
  display: flex;
  align-items: center
}

.company view:nth-child(1){
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-size: 32rpx;
}
.company image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-left: 40rpx;
}

.company view:nth-child(2){
 color: #505050;
}
.company .other{
  display: flex;
  margin-top: 10rpx;
}

.company .other view{
  color: #6b6b6b;
  font-size: 28rpx;
}
.company .other view:nth-child(1){
  border-right: 1px #6b6b6b solid;
  padding-right:20rpx; 
  height:38rpx;
}

.des{
  background-color: #00b4d4;
  display: flex;
  color: #f0f0f0;
  align-items: center;
  margin-top:20rpx; 
}
.des view{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.des view:nth-child(1){
  flex-grow: 1;
  margin-left: 30rpx;
  font-size: 34rpx;

}


.des view:nth-child(2){
  margin-right: 30rpx;
  font-size: 28rpx;
}

.des-detail{
  font-size: 26rpx;
  color: #505050;
  margin-left: 30rpx;
  padding-right: 20rpx;
  margin-top: 20rpx;
}
.des-detail view{
  margin-top: 8rpx;
}

.des2{
  margin-top: 30rpx;
 
}

.dis{
  margin-left: 30rpx;
  display: flex;
   font-size: 30rpx;
   align-items: center;
   margin-top: 30rpx;
}
.dis-img0{
  width: 30rpx;
  height: 30rpx
}
.dis-img1{
  width: 40rpx;
  height: 40rpx
}
.dis-img2{
  width: 90rpx;
  height: 60rpx
}
.add{
  margin-left: 20rpx;
}
.dis view:nth-child(3){
  flex-grow: 1;
  text-align: center;
 
}

.share{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  border-top: 1rpx solid #eee;
  height: 90rpx;

}

.share view{
  flex-grow: 1;
  text-align: center;

}

.share .coll{
  display: flex;

}

.share .coll view{
  flex-grow: 1;
  text-align: center
}

.coll image{
    width: 40rpx;
    height: 40rpx;
}

.coll .coll-1{
    border-right: 1px #eee solid;
    padding-top: 10rpx;
    padding-bottom: 6rpx

}
.coll .coll-2{
  padding-top: 10rpx;
}

.share-r{
  background-color: #00b4d4;
  color: #fff;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
}

.show{
  position: fixed;
  top: 30%;
  left: 20%;
  height: 150rpx;
  width: 60%;
  background-color: #d86552;
  opacity: 0.9;
  border-radius: 20rpx;
  text-align: center;
  color: #fff;
  line-height: 150rpx;

}
.diss{
  display: none
}