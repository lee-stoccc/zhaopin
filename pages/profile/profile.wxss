.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
  padding-top: 30rpx;
}

.container {
flex-direction:column;
align-items:center;
justify-content:center;
box-sizing:border-box;
padding: 0;
background-color:#00b5d4;
height: 400rpx;
display: flex;
}



.page .page-hd {
  margin-bottom: 15px;

  background: #FFFFFF;
  border-radius: 5px;
  box-shadow: 0 3px 5px 0 rgba(0, 0, 0, 0.05);
}
.page .page-hd image {
  width: 75px;
  height: 75px;
  border-radius: 50%;
}
.page .page-hd button {
  padding: 0 25px;
  border-radius: 20px;
  background: #99499c;
  color: #FFFFFF;
  margin: 10px auto;
  font-size: 16px;
}
.page .page-bd .title {
  margin-bottom: 5px;
}
.page .page-bd .ul .li {
  position: relative;
  padding: 18px 0;
}
.page .page-bd .ul .li image {
  width: 25px;
  height: 25px;
  vertical-align: middle;
  margin-right: 5px;
}
.page .page-bd .ul .li::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #e5e5e5;
  color: #e5e5e5;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.page .page-bd .ul .li:last-child::after {
  border: 0;
}

